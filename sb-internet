if grep -xq 'up' /sys/class/net/w*/operstate 2>/dev/null ; then
	wifiicon="$(awk '/^\s*w/ { print "ï‡«", int($3 * 100 / 70) "% " }' /proc/net/wireless)"
elif grep -xq 'down' /sys/class/net/w*/operstate 2>/dev/null ; then
	grep -xq '0x1003' /sys/class/net/w*/flags && wifiicon="ïª© " || wifiicon="ïª© "
fi

printf "%s%s%s\n" "$wifiicon" "$(sed "s/down/ïœ/;s/up/ïœ€ /" /sys/class/net/e*/operstate 2>/dev/null)" "$(sed "s/.*/ï‘– /" /sys/class/net/nord*/operstate 2>/dev/null)"
